<h2>Create New Meta Event</h2>
<%= bootstrap_form_with model: @meta_event do|f| %>
  <%= f.text_field :name, label: 'Meta Event Name' %>
  <%= f.text_field :slug %>
  <%= f.fields_for :events do |ef| %>
    <%= ef.text_field :name, label: 'Event Instance Name' %>
    <%= ef.date_field :start_date %>
    <%= ef.date_field :end_date %>
  <% end %>
  <%= f.submit 'Create Meta Event' %>
<% end %>
