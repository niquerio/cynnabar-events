<h2>Create New Event Series</h2>
<%= bootstrap_form_with model: @meta_event, url: admin_event_series_path do|f| %>
  <%= f.text_field :name, label: 'Name of Event Series' %>
  <%= f.text_field :slug %>
  <%= f.fields_for :events do |ef| %>
    <%= ef.text_field :name, label: 'Name of First Event in Event Series' %>
    <%= ef.date_field :start_date %>
    <%= ef.date_field :end_date %>
  <% end %>
  <%= f.submit 'Create Event Series' %>
<% end %>
