<div class="form-change-password">
<h2>Change your password</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password",label: 'New Password', label_as_placeholder: true %>

    <%= f.password_field :password_confirmation, autocomplete: "off", label: 'New Password Confirmation',  label_as_placeholder: true%>

    <%= f.submit "Change my password", class: 'btn btn-block btn-lg btn-primary' %>
<% end %>
</div>

