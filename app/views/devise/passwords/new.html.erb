<div class="form-signin">
<h2>Forgot your password?</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", label_as_placeholder: true %>
    </div>
  
      <%= f.submit "Reset Password", class: "btn btn-primary btn-block btn-lg" %>
  <% end %>
    <p>An email with instructions on how to reset the password will be sent to the given email address.</p>
  
</div>
